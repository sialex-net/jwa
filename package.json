		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.4",
		"@types/react-dom": "^19.2.3",
		"@typescript-eslint/parser": "^8.46.4",
		"@vitest/browser": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"drizzle-kit": "^0.31.8",
		"enforce-unique": "^1.3.0",
		"eslint": "^9.39.1",
		"eslint-plugin-perfectionist": "^4.15.1",
		"knip": "^5.77.1",
		"lefthook": "^1.13.6",
		"playwright": "^1.56.1",
		"tailwind-scrollbar": "^4.0.2",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"vite-plugin-icons-spritesheet": "^3.0.1",
		"vitest": "^3.2.4",
		"vitest-browser-react": "^1.0.1",
		"wrangler": "^4.48.0"
	},
	"name": "john-wicki-app",
	"packageManager": "pnpm@10.16.0",
	"private": true,
	"scripts": {
		"biome:check": "biome check --write --verbose",
		"biome:ci": "biome ci --verbose",
		"build": "react-router build",
		"cf:deploy:preview": "CLOUDFLARE_ENV=preview react-router build && wrangler deploy",
		"cf:deploy:production": "CLOUDFLARE_ENV=production react-router build && wrangler deploy",
		"cf:secrets:preview": "wrangler secret bulk -e='preview' ./.dev.vars.preview",
		"cf:secrets:production": "wrangler secret bulk -e='production' ./.dev.vars.production",
		"cf:typegen": "wrangler types",
		"clean": "DEBUG=eslint:eslint,eslint:eslint-helpers eslint --fix --cache --cache-location ./node_modules/.tmp/eslintcache . && biome check --write --verbose",
		"dev": "react-router dev",
		"dev:preview": "CLOUDFLARE_ENV=preview react-router dev",
		"drizzle-kit:generate": "bun --env-file=.dev.vars drizzle-kit generate --config=./config/drizzle.config.ts",
		"drizzle-kit:local:push": "bun --env-file=.dev.vars drizzle-kit push --config=./config/drizzle.config.ts",
		"drizzle-kit:local:studio": "bun --env-file=.dev.vars drizzle-kit studio --config=./config/drizzle.config.ts",
		"drizzle-kit:preview:studio": "bun --env-file=.dev.vars.preview drizzle-kit studio --config=./config/drizzle.config.ts",
		"drizzle-kit:production:studio": "bun --env-file=.dev.vars.production drizzle-kit studio --config=./config/drizzle.config.ts",
		"libsql:local:dev": "turso dev --db-file ./data/local-db/local.sqlite3",
		"libsql:local:migrate": "bun --env-file=.dev.vars ./data/drizzle/migrate.ts",
		"libsql:local:seed": "bun --env-file=.dev.vars ./data/seed.ts",
		"libsql:preview:migrate": "bun --env-file=.dev.vars.preview ./data/drizzle/migrate.ts",
		"libsql:preview:seed": "bun --env-file=.dev.vars.preview ./data/seed.ts",
		"lint:eslint": "DEBUG=eslint:eslint,eslint:eslint-helpers eslint --fix --cache --cache-location ./node_modules/.tmp/eslintcache .",
		"lint:knip": "knip",
		"preview": "react-router build && vite preview",
		"preview:preview": "CLOUDFLARE_ENV=preview react-router build && vite preview",
		"test": "vitest",
		"test:ci": "vitest run",
		"test:e2e:dev": "playwright test",
		"test:ui": "vitest --ui",
		"typecheck": "wrangler types && react-router typegen && tsc -b"
	},
	"type": "module",
	"version": "1.0.0"
}
