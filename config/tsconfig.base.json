{
	"$schema": "http://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": "..",
		"checkJs": true,
		"composite": true,
		"erasableSyntaxOnly": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"verbatimModuleSyntax": true
	},
	"extends": "../tsconfig.json"
}
